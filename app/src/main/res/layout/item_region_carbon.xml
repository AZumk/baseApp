<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/standard_margin_double"
    android:layout_marginEnd="@dimen/standard_margin_double">

    <TextView
        android:id="@+id/regionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/forecastValue"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/standard_margin"
        android:paddingTop="@dimen/standard_margin"
        style="@style/StandardText.Large"
        android:text="Scotland"
        />

    <TextView
        android:id="@+id/forecastIndex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/forecastValue"
        app:layout_constraintTop_toBottomOf="@id/regionTitle"
        android:layout_marginEnd="@dimen/standard_margin"
        android:paddingBottom="@dimen/standard_margin"
        style="@style/StandardText"
        android:text="Low"
        />

    <ImageView
        android:id="@+id/forecastIndexIndicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/forecastValue"
        app:layout_constraintStart_toStartOf="@id/forecastValue"
        android:background="@color/lightGreen"
        android:src="@drawable/green_gradient_bg"
        />

    <TextView
        android:id="@+id/forecastValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="@dimen/standard_margin"
        android:paddingStart="@dimen/standard_margin_double"
        android:paddingEnd="@dimen/standard_margin_double"
        style="@style/StandardText.XLarge"
        android:text="99"
        />

    <ImageView
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/lightGreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/forecastIndexIndicator"/>
</androidx.constraintlayout.widget.ConstraintLayout>